@model IEnumerable<DTO.City>

@{
    ViewData["Title"] = "GetAllCities";
}

<h2>All cities available</h2>

<table class="table">
    <thead>
        <tr style="background-color:darkcyan; color:white">
            <th>
                Code
            </th>
            <th>
                City
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.ActionLink("Show Restaurants", "GetRestaurants", "Restaurant", new { id=item.idCity })
                
            </td>
        </tr>
}
    </tbody>
</table>


