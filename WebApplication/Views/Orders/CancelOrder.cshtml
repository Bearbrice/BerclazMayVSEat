@model DTO.Orders

@{
    ViewData["Title"] = "CancelOrder";
}

<h2>Cancel order</h2>
<h4>Order</h4>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <text>Would you like to add this item to your shopping cart ? </text>
    <blockquote>@Html.DisplayFor(model => model.idOrder)</blockquote>
    <blockquote>@Html.DisplayFor(model => model.scheduled_at)</blockquote>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.idOrder)
    @Html.HiddenFor(model => model.scheduled_at)
    @Html.HiddenFor(model => model.delivered_at)
    @Html.HiddenFor(model => model.fk_idCustomer)
    @Html.HiddenFor(model => model.fk_idStaff)
    @Html.HiddenFor(model => model.status)

    
</div>

    <div class="form-group">
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>

    
}

