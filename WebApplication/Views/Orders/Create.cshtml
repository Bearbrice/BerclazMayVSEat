@model DTO.Orders

@{
    ViewData["Title"] = "Create";
}

<h2>Delivery scheduling</h2>

<h4>Customer</h4>
<hr />

<h3> The order will be delivered the @DateTime.Today.ToString("dd.MM.yyyy")  </h3>
<h3>Choose the time you want the delivery </h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @*TIME*@
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <p>Time (HH:MM)</p>
            <p>Minutes (00/15/30/45)</p>
            <p>Minimum : Current hour + 30 minutes</p>
            @*@Html.Label("Choisissez un horaire pour une commande le :" + @DateTime.Now.Date);*@
            <hr />
            <div class="col-md-10">

                @Html.EditorFor(model => model.scheduled_at, new { htmlAttributes = new { @class = "form-control", @Type = "time" } })
                @Html.ValidationMessageFor(model => model.scheduled_at, "", new { @class = "text-danger" })

                <p style="color:red;">@ViewBag.ErrorMessage</p>
                @*@Html.EditorFor(m => m.scheduled_at, new { @class = @"timepicker" })*@

            </div>
        </div>

            <div class="form-group">
                <input type="submit" value="Validate" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>



<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




