@model IEnumerable<WebApplication.Models.OrderDishDetails>

@{
    ViewData["Title"] = "GetOrdersInfo";

    var orderId = @Html.DisplayFor(model => model.ElementAt(0).idOrder);
    decimal totalPrice = new decimal(0.0);
}

<h2>Detailed summary of the order</h2>
<h3>Order #@orderId</h3>

<table class="table">
    <thead>
        <tr style="background-color:darkcyan; color:white">
            <th>
                N°
            </th>
            <th>
                Dish
            </th>
            <th>
                Price
            </th>
            <th>
                Scheduled
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            totalPrice += item.dishPrice;
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idOrder)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dishName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dishPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.scheduled)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.status)
                </td>
                <td>
                </td>
            </tr>
        }
    </tbody>
</table>

<p><TotalPrice> Total price : @totalPrice <devise> CHF</devise> </TotalPrice></p>

@Html.ActionLink("Go to MyOrders", "GetOrdersRelativeToCustomer", "Orders", new { @ViewBag.username })
