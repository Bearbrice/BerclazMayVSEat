@model IEnumerable<DTO.Restaurant>

@{
    ViewData["Title"] = "GetRestaurants";
}

<h2>Restaurants available</h2>

<table class="table">
    <thead>
        <tr style="background-color:darkcyan; color:white">
            <th>
                N°
            </th>
            <th>
                Restaurant
            </th>
            <th>
                Partner since
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idRestaurant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.merchant_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.created_at)
            </td>
            <td>
                @Html.ActionLink("Show delicious dishes", "GetDishes", "Dish", new { id = item.idRestaurant })
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    @Html.ActionLink("Go back to cities", "GetAllCities", "City")
</div>
