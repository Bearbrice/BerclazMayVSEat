@model WebApplication.Models.AccountDetails

@{
    ViewData["Title"] = "GetAccountDetailByLogin";
}

<h2>Account details for user <i>@ViewBag.username</i></h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Full name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.fullName)
        </dd>
        <dt>
            Username
        </dt>
        <dd>
            @Html.DisplayFor(model => model.username)
        </dd>
        <dt>
            @if (Convert.ToBoolean(ViewBag.isCusto))
            {
                <text>Created at</text>
            }
            else
            {
                <text>Hired on</text>
            }
        </dt>
        <dd>
            @Html.DisplayFor(model => model.createdOrHired)
        </dd>
        <dt>
            Phone number
        </dt>
        <dd>
            @Html.DisplayFor(model => model.phone)
        </dd>
    </dl>
</div>
<div>
    @if (Convert.ToBoolean(ViewBag.isCusto))
    {
        @Html.ActionLink("Back to Cities", "GetAllCities", "City", new { @ViewBag.username })
    }
    else
    {
        @Html.ActionLink("Back to order list", "GetOrdersRelativeToStaff", "Orders", new { @ViewBag.username });
    }
</div>
