@model DTO.Customer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutCreateAnAccount.cshtml";
}

<h2>Create your account</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Full name</label>
                <input asp-for="full_name" class="form-control" required/>
                <span asp-validation-for="full_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Phone number</label>
                <input asp-for="telephone" class="form-control" type="tel" required/>
                <span asp-validation-for="telephone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>City code</label>
                <input asp-for="fk_idCity" class="form-control" placeholder="3960" required/>
            </div>
            <b style="color:red; font-size:small;">
                <p>@ViewBag.ErrorCityCode</p>
            </b>
            <div class="form-group">
                <input type="button" value="Cancel" style="background-color:darkcyan; color: white; padding: 16px 20px; margin: 8px 0; border: none; cursor: pointer; width: 49%; opacity: 0.9;" onclick="@("window.location.href='" + @Url.Action("Index", "Login") + "'");" />
                <input type="submit" value="Continue" style="background-color: #4CAF50; color: white; padding: 16px 20px; margin: 8px 0; border: none; cursor: pointer; width: 49%; opacity: 0.9;" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
